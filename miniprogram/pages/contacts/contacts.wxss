/* contacts.wxss */

page {
	width: 100%;
	height: 100%;
	font-family: Source Han Sans CN;
}

.contacts {
	width: 100%;
	height: 100%;
	display: flex;
	flex-direction: column;
}

.userinfo {
	display: flex;
	align-items: center;
	flex-direction: column;
	width: 100%;
	height: 180rpx;
	padding: 20rpx;
	box-sizing: border-box;
	color: #333;
	background-color: #efefef;
}

.username {
	font-size: 30rpx;
}

.friend-list-box {
	width: 100%;
	padding: 44rpx 0 0 32rpx;
	box-sizing: border-box;
}

.friend-list-item {
	position: relative;
	display: flex;
	align-items: center;
	height: 118rpx;
	box-sizing: border-box;
}

.friend-list-item-avatar {
	display: flex;
	align-items: center;
	height: 100%;
	margin-right: 32rpx;
}

.avatar-icon {
	width: 96rpx;
	height: 96rpx;
}

.offline-gray{
	-webkit-filter: grayscale(100%);
	-moz-filter: grayscale(100%);
	-ms-filter: grayscale(100%);
	-o-filter: grayscale(100%);
	filter: grayscale(100%);
	filter: gray;
}

.online-dot {
	position: absolute;
	width: 32rpx!important;
	height: 30rpx!important;
	bottom: 10rpx;
	left: 68rpx;
}

.friend-list-item-username {
	display: flex;
	align-items: center;
	justify-content: space-between;
	flex-grow: 1;
	height: 100%;
	padding-right: 16px;
	border-bottom: 1px solid #EFEFEF;
}
